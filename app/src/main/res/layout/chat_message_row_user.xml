<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_message_row_rootLayout_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chat_message_row_card_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#513F51B5"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_message_row_layout_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chat_message_row_textMessege_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/cantarell"
                android:text="ksjkfjkljeijklsjkfjsklfjkjflkjfksjfljslfkjslkfjklsjfkldjiejvnglkjfklsjslefljfkljiejkjkjkjkjkjfuseufhahkwjlkjsklajfkljljlkjsklfjksljfklsjfkldsjfkldsjfwlsjdkjfkdsljfkdsjfdls"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/message_seen_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="sent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chat_message_row_card_user"
        app:layout_constraintTop_toBottomOf="@+id/chat_message_row_card_user" />

    <TextView
        android:id="@+id/chat_message_row_time_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="@+id/message_seen_sent"
        app:layout_constraintEnd_toStartOf="@+id/message_seen_sent"
        app:layout_constraintStart_toStartOf="@+id/chat_message_row_card_user"
        app:layout_constraintTop_toTopOf="@+id/message_seen_sent" />


</androidx.constraintlayout.widget.ConstraintLayout>
